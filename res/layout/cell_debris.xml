<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/cell_debris_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Remove Debris"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <SeekBar
        android:id="@+id/debris_threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cell_debris_text"
        android:max="300"
        android:progress="5"/>

    <TextView
        android:id="@+id/debris_threshold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/debris_threshold"
        android:text="Debris Size: 1"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>
