<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/cell_oblong_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. Remove Oblongs"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <SeekBar
        android:id="@+id/oblong_threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cell_oblong_text"
        android:max="18"
        android:progress="4"/>

    <TextView
        android:id="@+id/oblong_threshold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oblong_threshold"
        android:text="Ratio: 3"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>
