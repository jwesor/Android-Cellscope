<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/cell_background_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Remove Background"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <SeekBar
        android:id="@+id/background_threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cell_background_text"
        android:max="300"
        android:progress="250"/>

    <TextView
        android:id="@+id/background_threshold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_threshold"
        android:text="Background Size: 50"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>
